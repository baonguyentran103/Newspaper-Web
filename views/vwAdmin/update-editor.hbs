<script>
    function admin_edit_editor(MaUS,TenUS,TenCM) {

    $.ajax
      ({
        url  : `/admin/get_cat`,
        type : "POST",
        cache:false,
        data : {MaUS},
        success:function(response){
          console.log(response);
         //console.log(response.tag1[0].MaNhan);
         let src="";
         let tmp1=response.cat1;
         let tmp2=response.cat2;
        
         for(let i=0;i<response.cat1.length;i++)
         {
           let temp1=tmp1[i].MaCM;
           let temp2=tmp1[i].TenCM;
           //src=src+`<option value='${tmp1[i].MaNhan}' selected>${tmp1[i].TenNhan}</option>`
           src=src+`<option value="`+temp1+`"selected class="opt-remove">`+temp2+`</option>`
         }
        //console.log(src);
         for(let i=0;i<response.cat2.length;i++)
         {
           src=src+`<option value='${tmp2[i].MaCM}' class="opt-remove">${tmp2[i].TenCM}</option>`
         }
         
        $('.opt-remove').remove();
         $('#list1').selectpicker();
         //console.log(src);
         $("#list1").append(src);
         $('#list1').selectpicker('refresh');
         }
      });


     document.getElementById('ad_editor_code1').textContent = MaUS;
      document.getElementById('ad_editor_code').textContent = MaUS;
      document.getElementById('ad_editor_name').textContent = TenUS;  
      
    };
</script>