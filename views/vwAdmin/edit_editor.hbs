<br>
<form action="/admin/view/mana_editor" method="POST">
                    <div class="container">
                        <h2>Update Editor</h2>
                        <div class="form-group">
                            <label style="font-weight: bold;">Code:</label>
                            <div>{{this.code}}
                            {{!-- <div class="form-control" name="txtCode" id="mabv_approve"> </div> --}}
                            <input hidden type="text" readonly value="{{this.code}}" name="txtCode" cols="7">
                            </div>
                        </div>
                        <div class="form-group">
                            <label style="font-weight: bold;">Name:</label>
                            {{!-- <textarea class="form-control" id="tieude_approve"></textarea> --}}
                            <div>
                                {{name}}
                            </div>
                        </div>
                        <div class="form-group">
                            <label style="font-weight: bold;">Category:</label>
                            <div>
                            <select class="selectpicker" multiple name="txtCat" title="Category ... " data-live-search="true"
                                id="list">
                                {{#each this.list_cat}}
                                <option value="{{MaCM}}" selected>{{TenCM}}</option>
                                {{/each}}
                                
                                {{#each this.list_not_cat}}
                                <option value="{{MaCM}}">{{TenCM}}</option>
                                {{/each}}
                            </select>
                            </div>
                        </div>

                    </div>
                    {{!-- <div class="container">
                        <div class="form-group">
                            <label for="comment">Publication date (dd/mm/yyyy):</label>
                            <textarea class="form-control" rows="1" id="comment" name="txtngaydang"></textarea>
                        </div>
                    </div> --}}
                    <button type="submit" class="btn btn-info"> Update </button>
</form>

