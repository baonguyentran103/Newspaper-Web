<div class="modal" id="myModal_Delete">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Delete</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <!-- Modal body -->
            <div class="modal-body">
                <form action="/admin/view/category/delete" method="POST">
                    <div class="container">

                    </div>
                    <div class="container">
                        <div class="form-group">
                            <h5>Sub Code:</h5>
                            {{!-- <textarea readonly name="txtCode" id="mabv_refuse" rows="1" cols="6"> </textarea> --}}
                            <div id="del_sub1"></div>
                            <div hidden>
                                <textarea name="txtSubCode" id="del_sub" rows="1" cols="5" readonly></textarea>
                            </div>
                            <h5>Name:</h5>
                            <div aria-readonly="true" id="del_name">
                            </div>
                            <h5>Main Code:</h5>
                            <div aria-readonly="true" id="del_main">
                            </div>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-danger"> Delete </button>
                </form>
            </div>
            <!-- Modal footer -->

        </div>
    </div>
</div>

<div class="modal" id="myModal_Edit">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Edit</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->

            <div class="modal-body">
                <form action="/admin/view/category/edit" method="POST">
                    <div class="container">
                        <div class="form-group">
                            <h5>Sub Code:</h5>
                            <div id="edit_sub1"></div>
                            <div hidden>
                                <textarea name="txtSubCode" id="edit_sub" rows="1" cols="6" readonly></textarea>
                            </div>

                            <h5>Name:</h5>
                            <div>
                                <textarea required name="txtSubName" id="edit_name" rows="1" cols="47"></textarea>
                                 <div>
                                <span class="cat_message" style="color: red;"></span>
                                </div>
                            </div>

                            <h5>Depict:</h5>
                            <div>
                                <textarea name="txtSubDepict" id="edit_depict" rows="3" cols="47" ></textarea>
                            </div>

                            <h5>Parent Category:</h5>

                            {{!-- <div>
                                <textarea name="txtMainCode" id="edit_main" rows="1" cols="6"></textarea>
                            </div> --}}

                            <select id="edit_main" class="form-control" name="txtMainCode">
                                <option value="none">None ... </option>
                                {{#each this.list_category_dad}}
                                <option value="{{MaCM}}">{{TenCM}}</option>
                                {{/each}}
                            </select>

                            
                        </div>
                    </div> 
                    <button type="submit" class="btn btn-info"> Edit </button>
                </form>
            </div>
            <!-- Modal footer -->
            {{!-- <div class="modal-footer">
                <button type="button" class="btn btn-success" data-dismiss="modal">Gửi</button>
            </div> --}}
        </div>
    </div>
</div>

<div class="modal" id="myModal_Add">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Add Category</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->

            <div class="modal-body">
                <form action="/admin/view/category/add" method="POST">
                    <div class="container">
                        <div class="form-group">
                            <h5>Name:</h5>
                            <div >
                                <textarea required name="txtAddSubName" id="add_name" rows="1" cols="47"></textarea>
                                <div>
                                <span class="cat_message" style="color: red;"></span>
                                </div>
                            </div>

                            <h5>Depict:</h5>
                            <div >
                                <textarea name="txtAddSubDepict" id="add_depict" rows="3" cols="47" ></textarea>
                            </div>


                            <h5>Parent Category:</h5>

                            <select class="form-control" name="txtAddMainCode">
                                <option value="none">None ... </option>
                                {{#each this.list_category_dad}}
                                <option value="{{MaCM}}">{{TenCM}}</option>
                                {{/each}}
                                
                            </select>

                            <h5>Status:</h5>
                            <div>
                                <textarea required name="txtAddStatus" id="add_status" rows="1" cols="2"></textarea>
                            </div>
                            
                        </div>
                    </div> 
                    <button type="submit" class="btn btn-success"> Add </button>
                </form>
            </div>
            <!-- Modal footer -->
            {{!-- <div class="modal-footer">
                <button type="button" class="btn btn-success" data-dismiss="modal">Gửi</button>
            </div> --}}
        </div>
    </div>
</div>

<div class="modal" id="myModal_Add_Del">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Add</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <!-- Modal body -->
            <div class="modal-body">
                
                    <div class="container">

                    </div>
                    <div class="container">
                        
                            <h5>Sub Code:</h5>
                            {{!-- <textarea readonly name="txtCode" id="mabv_refuse" rows="1" cols="6"> </textarea> --}}
                            <div id="add_del_sub1"></div>
                            <div hidden>
                                <textarea name="txtSubCode" id="add_del_sub" rows="1" cols="5" readonly></textarea>
                            </div>
                            <h5>Name:</h5>
                            <div aria-readonly="true" id="add_del_name">
                            </div>
                            <h5>Main Code:</h5>
                            <div aria-readonly="true" id="add_del_main">
                            </div>
                        
                    </div>

                    <button id="add_del_A" class="btn btn-success" type="reset"> Add </button>
                
            </div>
            <!-- Modal footer -->

        </div>
    </div>
</div>

<script>
    function category_del(MaCM,TenCM,MaCM_cha) {
      document.getElementById('del_sub').textContent = MaCM;
      document.getElementById('del_sub1').textContent = MaCM;
      document.getElementById('del_name').textContent = TenCM;
      document.getElementById('del_main').textContent = MaCM_cha;
    };
    function category_add_del(MaCM,TenCM,MaCM_cha) {
      document.getElementById('add_del_sub').textContent = MaCM;
      document.getElementById('add_del_sub1').textContent = MaCM;
      document.getElementById('add_del_name').textContent = TenCM;
      document.getElementById('add_del_main').textContent = MaCM_cha;
    };
    function category_edit(MaCM,TenCM,MaCM_cha,MieuTaCM,TrangThai) {
      document.getElementById('edit_sub').textContent = MaCM;
      document.getElementById('edit_sub1').textContent = MaCM;
      document.getElementById('edit_name').textContent = TenCM;
      document.getElementById('edit_main').value = MaCM_cha;
      document.getElementById('edit_depict').textContent = MieuTaCM;
      document.getElementById('edit_status').textContent = TrangThai;
    };
</script>
