                            <div hidden>
                                <textarea name="txtCode" id="edit_code" rows="1" cols="47" readonly></textarea>
                            </div>
                            <h5>Old Value:</h5>
                            <div id="edit_value1"></div>
                            <h5>New Value:</h5>
                            <div>
                                <textarea required name="txtValue" id="edit_value" rows="1" cols="47" ></textarea>
                                <div>
                                <span class="tag_message" style="color: red;"></span>
                                </div>
                            </div>


                        </div>
                    </div>

                    <button type="submit" class="btn btn-info"> Edit </button>
                </form>
            </div>
            <!-- Modal footer -->

        </div>
    </div>
</div>

<div class="modal" id="myModal_Add">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Add</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <!-- Modal body -->
            <div class="modal-body">
                <form action="/admin/view/tag/add" method="POST">
                    <div class="container">

                    </div>
                    <div class="container">
                        <div class="form-group">
                            {{!-- <h5>Code:</h5>
                            <div>
                                <textarea name="txtCode" id="add_code" rows="1" cols="47" ></textarea>
                            </div> --}}
                            <h5>Value:</h5>
                            <div>
                                <textarea required name="txtValue" id="add_value" rows="1" cols="47" ></textarea>
                                <div>
                                <span class="tag_message" style="color: red;"></span>
                                </div>
                            </div>
                            <h5>Status:</h5>
                            <div>
                                <textarea required name="txtStatus"  id="add_status" rows="1" cols="47" ></textarea>
                            </div>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-success"> Add </button>
                </form>
            </div>
            <!-- Modal footer -->

        </div>
    </div>
</div>

<script>
    function tag_del(MaNhan,TenNhan,TrangThai) {
      document.getElementById('del_code').textContent = MaNhan;
      document.getElementById('del_value').textContent = TenNhan;
      document.getElementById('del_status').textContent = TrangThai;
      document.getElementById('del_code1').textContent = MaNhan;
    };
    function tag_add_del(MaNhan,TenNhan,TrangThai) {
      document.getElementById('add_del_code').textContent = MaNhan;
      document.getElementById('add_del_value').textContent = TenNhan;
      document.getElementById('add_del_status').textContent = TrangThai;
      document.getElementById('add_del_code1').textContent = MaNhan;
    };
    function tag_edit(MaNhan,TenNhan,TrangThai) {
      document.getElementById('edit_code').textContent = MaNhan;
      document.getElementById('edit_code1').textContent = MaNhan;
      document.getElementById('edit_value1').textContent = TenNhan;
    };
</script>

