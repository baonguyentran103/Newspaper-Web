<div class="modal" id="myModal_Delete">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Delete</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <!-- Modal body -->
            <div class="modal-body">
                <form action="/admin/view/tag/delete" method="POST">
                    <div class="container">

                    </div>
                    <div class="container">
                        <div class="form-group">
                            <h5>Code:</h5>
                            {{!-- <textarea readonly name="txtCode" id="mabv_refuse" rows="1" cols="6"> </textarea> --}}
                            <div  id="del_code1"></div>
                            <div hidden id="del_code1">
                                <textarea name="txtCode" id="del_code" rows="1" cols="47" readonly  ></textarea>
                            </div>
                            <h5>Value:</h5>
                            <div aria-readonly="true" id="del_value">
                            </div>
                            <h5>Status:</h5>
                            <div aria-readonly="true" id="del_status">
                            </div>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-danger"> Delete </button>
                </form>
            </div>
            <!-- Modal footer -->

        </div>
    </div>
</div>
<div class="modal" id="myModal_Add_Del">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Add</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <!-- Modal body -->
            <div class="modal-body">
                <form action="/admin/view/tag/add_del" method="POST">
                    <div class="container">

                    </div>
                    <div class="container">
                        <div class="form-group">
                            <h5>Code:</h5>
                            {{!-- <textarea readonly name="txtCode" id="mabv_refuse" rows="1" cols="6"> </textarea> --}}
                            <div  id="add_del_code1"></div>
                            <div hidden>
                                <textarea name="txtCode" id="add_del_code" rows="1" cols="47" readonly  ></textarea>
                            </div>
                            <h5>Value:</h5>
                            <div aria-readonly="true" id="add_del_value">
                            </div>
                            <h5>Status:</h5>
